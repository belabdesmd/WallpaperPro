<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primaryTextColor">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="iconColor">@color/colorPrimaryDark</item>
        <item name="cardColor">@color/colorPrimary</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="primaryTextColor">@color/colorPrimary</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="iconColor">@color/colorPrimary</item>
        <item name="cardColor">#1C1C1C</item>
    </style>

    <style name="AppLightTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- The Style Of the Text in the Toolbar. -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
