<resources>

    <!-- Base application theme. -->
    <style name="AppLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="primaryTextColor">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="secondaryTextColor">@color/greyLight</item>
        <item name="iconColor">@color/colorPrimaryDark</item>
        <item name="cardColor">@color/colorPrimary</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="primaryTextColor">@color/colorPrimary</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="secondaryTextColor">@color/greyLight</item>
        <item name="iconColor">@color/colorPrimary</item>
        <item name="cardColor">@color/greyDark</item>
    </style>

    <style name="AppLightTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- The Style Of the Text in the Toolbar. -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppLightTheme.Drawer">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

</resources>
